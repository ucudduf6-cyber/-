        // Инициализация при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            // Изменение шапки при скролле
            window.addEventListener('scroll', function() {
                const header = document.getElementById('header');
                if (window.scrollY > 100) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });

            // Поиск
            const searchBtn = document.getElementById('search-btn');
            const searchInput = document.getElementById('search-input');
            
            searchBtn.addEventListener('click', function() {
                searchInput.classList.toggle('active');
            });

            // Закрытие поиска при клике вне его области
            document.addEventListener('click', function(e) {
                if (!searchBtn.contains(e.target) && !searchInput.contains(e.target)) {
                    searchInput.classList.remove('active');
                }
            });

            // Мобильное меню
            const hamburger = document.getElementById('hamburger');
            const mobileMenu = document.getElementById('mobileMenu');
            const closeMenu = document.getElementById('closeMenu');
            
            hamburger.addEventListener('click', function() {
                mobileMenu.classList.add('active');
            });
            
            closeMenu.addEventListener('click', function() {
                mobileMenu.classList.remove('active');
            });

            // Слайдер баннера
            const slides = document.querySelectorAll('.hero-slide');
            const indicators = document.querySelectorAll('.indicator');
            let currentSlide = 0;
            
            function showSlide(index) {
                slides.forEach(slide => slide.classList.remove('active'));
                indicators.forEach(indicator => indicator.classList.remove('active'));
                
                slides[index].classList.add('active');
                indicators[index].classList.add('active');
                currentSlide = index;
            }
            
            indicators.forEach(indicator => {
                indicator.addEventListener('click', function() {
                    const slideIndex = parseInt(this.getAttribute('data-slide'));
                    showSlide(slideIndex);
                });
            });
            
            // Автоматическая смена слайдов
            setInterval(() => {
                let nextSlide = (currentSlide + 1) % slides.length;
                showSlide(nextSlide);
            }, 5000);

            // Карусели
            const carousels = document.querySelectorAll('.carousel-container');
            
            carousels.forEach(carousel => {
                const prevBtn = carousel.parentElement.querySelector('.prev');
                const nextBtn = carousel.parentElement.querySelector('.next');
                
                prevBtn.addEventListener('click', () => {
                    carousel.scrollBy({ left: -300, behavior: 'smooth' });
                });
                
                nextBtn.addEventListener('click', () => {
                    carousel.scrollBy({ left: 300, behavior: 'smooth' });
                });
            });

            // Навигация между страницами
            const mainContent = document.getElementById('main-content');
            const filmsPage = document.getElementById('films-page');
            const seriesPage = document.getElementById('series-page');
            const aboutPage = document.getElementById('about-page');
            const filmDetailPage = document.getElementById('film-detail-page');
            
            const allFilmsLink = document.getElementById('all-films-link');
            const allSeriesLink = document.getElementById('all-series-link');
            
            const navLinks = document.querySelectorAll('.nav-link');
            const footerLinks = document.querySelectorAll('.footer-link');
            const backBtns = document.querySelectorAll('.back-btn');
            const logo = document.getElementById('logo');
            
            // Функция для скрытия всех страниц и показа главной
            function showMainPage() {
                document.querySelectorAll('.content-page, .about-page, .film-detail-page').forEach(el => {
                    el.classList.remove('active');
                });
                mainContent.style.display = 'block';
                setTimeout(() => {
                    mainContent.style.opacity = '1';
                }, 10);
            }
            
            // Функция для показа определенной страницы
            function showPage(page) {
                document.querySelectorAll('.content-page, .about-page, .film-detail-page').forEach(el => {
                    el.classList.remove('active');
                });
                mainContent.style.display = 'none';
                
                setTimeout(() => {
                    page.classList.add('active');
                }, 10);
            }
            
            // Обработчики для навигационных ссылок
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pageId = this.getAttribute('data-page');
                    const page = document.getElementById(pageId);
                    showPage(page);
                });
            });
            
            // Обработчики для ссылок в футере
            footerLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const sectionId = this.getAttribute('data-section');
                    showPage(aboutPage);
                    
                    // Прокрутка к нужному разделу после небольшой задержки
                    setTimeout(() => {
                        const section = document.getElementById(sectionId);
                        if (section) {
                            section.scrollIntoView({ behavior: 'smooth' });
                        }
                    }, 100);
                });
            });
            
            // Обработчики для кнопок "Назад"
            backBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    showMainPage();
                });
            });
            
            // Обработчик для логотипа
            logo.addEventListener('click', function() {
                showMainPage();
            });
            
            // Обработчики для кнопок "Все" в разделах
            allFilmsLink.addEventListener('click', function(e) {
                e.preventDefault();
                showPage(filmsPage);
            });
            
            allSeriesLink.addEventListener('click', function(e) {
                e.preventDefault();
                showPage(seriesPage);
            });

            // Функция для показа страницы деталей
            function showContentDetail(type, id) {
                const content = contentData[type][id];
                if (!content) return;
                
                // Заполняем данные
                document.getElementById('film-detail-title').textContent = content.title;
                document.getElementById('film-rating').textContent = `Рейтинг: ${content.rating}`;
                document.getElementById('film-year').textContent = content.year;
                document.getElementById('film-genre').textContent = content.genre;
                document.getElementById('film-description').textContent = content.description;
                
                // Настраиваем кнопки в зависимости от статуса релиза
                const watchNowBtn = document.getElementById('watch-now-btn');
                const watchLaterBtn = document.getElementById('watch-later-btn');
                const statusMessage = document.getElementById('film-status-message');
                
                // Меняем название кнопки на "Смотреть"
                watchNowBtn.textContent = 'Смотреть';
                
                if (content.released) {
                    watchNowBtn.style.display = 'block';
                    statusMessage.style.display = 'none';
                } else {
                    statusMessage.innerHTML = '<strong>Скоро выйдет!</strong> Этот проект находится в производстве и скоро будет доступен для просмотра.';
                    statusMessage.style.display = 'block';
                }
                
                // Проверяем, добавлен ли контент в "Смотреть позже"
                const watchLater = JSON.parse(localStorage.getItem('watchLater') || '{}');
                if (watchLater[type] && watchLater[type].includes(id)) {
                    watchLaterBtn.classList.add('watch-later-active');
                    watchLaterBtn.textContent = 'Уже посмотрел';
                } else {
                    watchLaterBtn.classList.remove('watch-later-active');
                    watchLaterBtn.textContent = 'Смотреть позже';
                }
                
                // Заполняем слайдер изображений
                const slidesContainer = document.getElementById('film-slides');
                const indicatorsContainer = document.getElementById('film-slider-indicators');
                
                slidesContainer.innerHTML = '';
                indicatorsContainer.innerHTML = '';
                
                content.images.forEach((image, index) => {
                    const slide = document.createElement('div');
                    slide.className = 'film-slide';
                    slide.style.backgroundImage = `url(${image})`;
                    slidesContainer.appendChild(slide);
                    
                    const indicator = document.createElement('div');
                    indicator.className = `film-slider-indicator ${index === 0 ? 'active' : ''}`;
                    indicator.dataset.index = index;
                    indicatorsContainer.appendChild(indicator);
                });
                
                // Сохраняем тип и ID для использования в функции "Смотреть позже"
                filmDetailPage.dataset.type = type;
                filmDetailPage.dataset.id = id;
                
                // Показываем страницу деталей
                showPage(filmDetailPage);
                
                // Инициализируем слайдер
                initDetailSlider();
            }

            // Инициализация слайдера на странице деталей
            let currentDetailSlide = 0;

            function initDetailSlider() {
                const slides = document.querySelectorAll('.film-slide');
                const indicators = document.querySelectorAll('.film-slider-indicator');
                const prevBtn = document.querySelector('.film-slider-prev');
                const nextBtn = document.querySelector('.film-slider-next');
                
                if (!slides.length) return;
                
                function goToSlide(index) {
                    slides.forEach(slide => slide.classList.remove('active'));
                    indicators.forEach(indicator => indicator.classList.remove('active'));
                    
                    slides[index].classList.add('active');
                    indicators[index].classList.add('active');
                    currentDetailSlide = index;
                }
                
                prevBtn.addEventListener('click', () => {
                    let newIndex = currentDetailSlide - 1;
                    if (newIndex < 0) newIndex = slides.length - 1;
                    goToSlide(newIndex);
                });
                
                nextBtn.addEventListener('click', () => {
                    let newIndex = currentDetailSlide + 1;
                    if (newIndex >= slides.length) newIndex = 0;
                    goToSlide(newIndex);
                });
                
                indicators.forEach(indicator => {
                    indicator.addEventListener('click', () => {
                        const index = parseInt(indicator.dataset.index);
                        goToSlide(index);
                    });
                });
            }

            // Функционал "Смотреть позже"
            function toggleWatchLater(type, id) {
                const watchLater = JSON.parse(localStorage.getItem('watchLater') || '{}');
                
                if (!watchLater[type]) {
                    watchLater[type] = [];
                }
                
                const index = watchLater[type].indexOf(id);
                
                if (index === -1) {
                    // Добавляем в "Смотреть позже"
                    watchLater[type].push(id);
                } else {
                    // Удаляем из "Смотреть позже"
                    watchLater[type].splice(index, 1);
                }
                
                localStorage.setItem('watchLater', JSON.stringify(watchLater));
                updateWatchLaterButtons();
            }

            // Обновление кнопок "Смотреть позже" на главной странице
            function updateWatchLaterButtons() {
                const watchLater = JSON.parse(localStorage.getItem('watchLater') || '{}');
                
                document.querySelectorAll('.carousel-item').forEach(item => {
                    const type = item.dataset.type;
                    const id = item.dataset.id;
                    const favoriteBtn = item.querySelector('.favorite-btn');
                    
                    if (favoriteBtn && watchLater[type] && watchLater[type].includes(id)) {
                        const icon = favoriteBtn.querySelector('i');
                        icon.classList.remove('far');
                        icon.classList.add('fas');
                        icon.style.color = '#FF6E00';
                    } else if (favoriteBtn) {
                        const icon = favoriteBtn.querySelector('i');
                        icon.classList.remove('fas');
                        icon.classList.add('far');
                        icon.style.color = '#FFFFFF';
                    }
                });
            }

            // Обработчики для открытия страницы деталей
            document.querySelectorAll('.carousel-item').forEach(item => {
                item.addEventListener('click', function(e) {
                    if (!e.target.closest('.favorite-btn')) {
                        const type = this.dataset.type;
                        const id = this.dataset.id;
                        showContentDetail(type, id);
                    }
                });
            });

            // Обработчики для кнопок "Смотреть позже" на странице деталей
            document.getElementById('watch-later-btn').addEventListener('click', function() {
                const type = filmDetailPage.dataset.type;
                const id = filmDetailPage.dataset.id;
                toggleWatchLater(type, id);
                
                // Обновляем текст кнопки
                if (this.classList.contains('watch-later-active')) {
                    this.classList.remove('watch-later-active');
                    this.textContent = 'Смотреть позже';
                } else {
                    this.classList.add('watch-later-active');
                    this.textContent = 'Уже посмотрел';
                }
            });

            // Обработчики для сердечек
            document.querySelectorAll('.favorite-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const carouselItem = this.closest('.carousel-item');
                    const type = carouselItem.dataset.type;
                    const id = carouselItem.dataset.id;
                    
                    toggleWatchLater(type, id);
                    
                    // Обновляем состояние сердечка
                    const icon = this.querySelector('i');
                    if (icon.classList.contains('far')) {
                        icon.classList.remove('far');
                        icon.classList.add('fas');
                        icon.style.color = '#FF6E00';
                    } else {
                        icon.classList.remove('fas');
                        icon.classList.add('far');
                        icon.style.color = '#FFFFFF';
                    }
                });
            });

            // Обработчики для кнопок на главном баннере
            document.getElementById('hero-watch-btn').addEventListener('click', function() {
                showContentDetail('films', 1);
            });
            
            document.getElementById('hero-about-btn').addEventListener('click', function() {
                showContentDetail('films', 1);
            });
            
            document.getElementById('hero-watch-btn-2').addEventListener('click', function() {
                showContentDetail('films', 3);
            });
            
            document.getElementById('hero-about-btn-2').addEventListener('click', function() {
                showContentDetail('films', 3);
            });

            // Функциональность поиска
            searchInput.addEventListener('input', function(e) {
                const searchTerm = e.target.value.toLowerCase();
                
                if (searchTerm.length < 2) return;
                
                // Ищем совпадения в данных
                let foundContent = null;
                let foundType = null;
                let foundId = null;
                
                for (const type in contentData) {
                    for (const id in contentData[type]) {
                        const content = contentData[type][id];
                        if (content.title.toLowerCase().includes(searchTerm)) {
                            foundContent = content;
                            foundType = type;
                            foundId = id;
                            break;
                        }
                    }
                    if (foundContent) break;
                }
                
                // Если нашли, показываем страницу деталей
                if (foundContent) {
                    showContentDetail(foundType, foundId);
                    e.target.value = '';
                    searchInput.classList.remove('active');
                }
            });

            // Инициализация при загрузке
            updateWatchLaterButtons();
        });
    </script>
</body>
</html>
